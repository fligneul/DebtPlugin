<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.fligneul.debtplugin</id>
    <name>DebtPlugin</name>
    <vendor>fligneul</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Technical Debt" anchor="bottom" factoryClass="com.github.fligneul.debtplugin.debt.DebtToolWindowFactory"/>
        <projectConfigurable
                parentId="tools"
                instance="com.github.fligneul.debtplugin.settings.DebtSettingsConfigurable"
                id="com.github.fligneul.debtplugin.settings.DebtSettingsConfigurable"
                displayName="Debt Plugin"/>
    </extensions>

    <actions>
        <action id="com.github.fligneul.debtplugin.debt.AddDebtAction"
                class="com.github.fligneul.debtplugin.debt.AddDebtAction"
                text="Add Debt"
                description="Add a new debt to the project."
                icon="AllIcons.General.Add">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
